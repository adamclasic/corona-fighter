{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "import/prefer-default-export": "off",
    "import/no-cycle": "off",
    "no-unused-vars": "off",
    "arrow-parens": "off"
  },
  "ignorePatterns": [
    "dist/",
    "build/",
    "test/",
    "webpack/"
  ]
}